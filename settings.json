{
  "permissions": {
    "allow": [
      "Bash(bunx tsc:*)",
      "Bash(AGENT_ID=\"test-agent\" bun run:*)",
      "Bash(EXIT=$?)",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Edit(.claude/**/*)",
      "Write(.claude/**/*)",
      "Bash(bun add:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/agent-init/run.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/skill-suggester/run.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/subagent-init/run.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pattern-detector/run.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pattern-detector/run.sh"
          }
        ]
      }
    ],
    "Stop": [],
    "SubagentStop": []
  },
  "version": "1.0.0",
  "project": {
    "name": "Effect TypeScript Project",
    "description": "Functional programming with Effect TypeScript"
  },
  "defaults": {
    "model": "sonnet"
  },
  "agents": {
    "autoInvoke": true
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true
  }
}
