{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": ["ES2024"],
    "types": ["@types/bun", "bun", "bun-types", "bun-types/globals"],
    "noEmit": true
  },
  "include": [
    "src/**/*", "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
